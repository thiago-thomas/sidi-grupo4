<div class="logo logo_dash">
    <a href="/admin"><img src="/imgs/cang-vetor.svg" alt="Logo Rei do Cangaço"></a>
    <div class="nome_novo">
        <span>Fornecedores</span>
        <a href="/admin/fornecedor/add"><button class="botao botao_nome_novo">Novo Fornecedor</button></a>
    </div>
</div>
<div class="dashboard">
    {{#each fornecedor}}
    <div class="campo_obj">
        <div>
            <h3>Nome: <i>{{nome}}</i></h3>
            <h3>Telefone: <i>{{telefone}}</i></h3>
            <h3>CPF: <i>{{cpf}}</i></h3>
            <h3>Endereço: <i>{{endereco}}</i></h3>
            <h3>Bairro: <i>{{bairro}}</i></h3>
            <h3>Cidade: <i>{{cidade}}</i></h3>
            <h3>Estado: <i>{{estado}}</i></h3>
            <h3>CEP: <i>{{cep}}</i></h3>
        </div>
        <div>
            <a href="/admin/fornecedor/edit/{{_id}}"><button class="botao btn_tam">Editar</button></a>
            <form action="/admin/fornecedor/del" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="error btn_tam">Deletar</button>
            </form>
        </div>
    </div>
    {{else}}
    <h4>Nenhum Fornecedor Registrado</h4>
    {{/each}}
</div>

